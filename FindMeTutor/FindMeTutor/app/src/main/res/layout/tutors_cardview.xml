<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_tutors"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tutorDp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/session"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tutorNameTxt"
                android:text="Nivek Ranjit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tutorDp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:numStars="5"
                android:layout_alignStart="@+id/tutorNameTxt"
                android:layout_below="@+id/tutorNameTxt"
                android:id="@+id/ratingBar" />

            <View
                android:layout_below="@+id/tutorDp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
